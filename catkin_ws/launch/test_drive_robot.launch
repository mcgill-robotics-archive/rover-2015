<launch>
	<include file="$(find control_systems)/launch/drive.launch">
		<arg name="differential" value="true" />
	</include>

    <group ns="drive">
    <node name="serial_node" pkg="rosserial_python" type="serial_node.py" respawn="true">
		<param name="port" value="/dev/mega_drive" />
	</node>
    </group>
    
    <group ns="arm">
    <node name="serial_node" pkg="rosserial_python" type="serial_node.py" respawn="true">
		<param name="port" value="/dev/mega_arm" />
	</node>
    </group>

    <node name="ahrs_publisher" pkg="ahrs" type="ahrs_node" respawn="true"/>
</launch>
